{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"app-plus": {
					//滚动条显示策略，设置为 "none" 时不显示滚动条。
					"scrollIndicator": "none",
					//导航栏配置
					"titleNView": {
						//搜索框配置
						"searchInput": {
							//非输入状态下文本的对齐方式。可取值： "left" - 居左对齐； "right" - 居右对齐； "center" - 居中对齐。
							"align": "center",
							//背景颜色
							"backgroundColor": "#f0f0f0",
							//输入框的圆角半径
							"borderRadius": "4px",
							//提示文本
							"placeholder": "搜索糗事",
							//提示文本颜色
							"placeholderColor": "#CCCCCC",
							//是否可输入
							"disabled": true
						},
						//按钮配置
						"buttons": [
							{
								//按钮颜色
								"color": "#FF9619",
								//按钮按下的颜色
								"colorPressed": "#BBBBBB",
								//按钮位置
								"float": "left",
								//字体大小
								"fontSize": "22px",
								//字体来源
								"fontSrc": "/static/font/icon.ttf",
								//显示的字体内容
								"text": "\ue609"
							},
							{
								"color": "#000000",
								"colorPressed": "#BBBBBB",
								"float": "right",
								"fontSize": "22px",
